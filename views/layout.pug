doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= "Esteban's Website"
    link(rel='stylesheet', href='/stylesheets/style.css')
  body.dark
    block header
    header
      nav
        a(href="/") #{i18n.__("layout.home")}
        a(href="/projects") #{i18n.__("layout.projects")}
        a(href= "/about") #{i18n.__("layout.about")}
        if (session.username)
          a(href= "/users/logout") logout
      .container
        .container__toggle-btn
         .container__toggle-btn__inner-cercle

    block content
    block foot
      footer
        .me
          a(href="/about/me") Est&eacute;ban SOUBIRAN
        .lang
          for lang in langs
            a(href="/lang/" + lang class="lang__btn") #{lang}
    block scripts      
      script(src="/javascripts/toggleBtn.min.js")
      script(src="/javascripts/url.min.js")
      

